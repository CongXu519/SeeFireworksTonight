<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical"
tools:context="com.example.xu.seefireworkstonight.MainActivity" >

<FrameLayout
    android:id="@+id/main_content"
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="0.96" />

<RadioGroup
    android:id="@+id/tab_menu"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/footer_bg"
    android:orientation="horizontal"
    android:weightSum="1"
    android:gravity="center_horizontal"
    android:layout_weight="0.00">

    <RadioButton
        android:id="@+id/map"
        android:layout_width="190dp"
        android:layout_height="match_parent"
        android:background="@drawable/tab_selector_checked_bg"
        android:button="@null"
        android:checked="true"
        android:drawableTop="@drawable/tab_selector_map"
        android:gravity="center_horizontal|bottom"
        android:paddingTop="0dp"
        android:text="Find"
        android:textColor="@drawable/tab_selector_tv_color"
        android:layout_gravity="bottom" />

    <RadioButton
        android:id="@+id/me"
        android:layout_width="190dp"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="@drawable/tab_selector_checked_bg"
        android:button="@null"
        android:drawableTop="@drawable/tab_selector_me"
        android:gravity="center_horizontal|bottom"
        android:paddingTop="0dp"
        android:text="Me"
        android:textColor="@drawable/tab_selector_tv_color" />
</RadioGroup>

</LinearLayout>